<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6C63FF"
    tools:context=".SplashActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:context=".SplashActivity">

        <!-- Tambahkan elemen UI seperti ImageView, TextView, atau ProgressBar di sini sesuai kebutuhan -->

        <ImageView
            android:id="@+id/splashImageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="10dp"
            android:layout_centerInParent="true"
            android:src="@drawable/logopocketgrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/montserrat"
            android:text="@string/judul_splash"
            android:textColor="#FFFFFF"
            android:textSize="36sp"
            android:textStyle="bold"

            app:layout_constraintTop_toBottomOf="@id/splashImageView" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>